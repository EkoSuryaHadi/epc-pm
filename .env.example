# EPC Project Control - Environment Variables Template
# Copy this file to .env (root), backend/.env, and frontend/.env.local
# Fill in the values appropriate for your environment

# ===============================================
# DEVELOPMENT ENVIRONMENT
# ===============================================

# Backend (.env in backend/ folder)
DATABASE_URL="postgresql://epc_user:epc_password@localhost:5432/epc_db"
JWT_SECRET="development-secret-change-in-production"
JWT_EXPIRES_IN="24h"
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"
REDIS_HOST="localhost"
REDIS_PORT=6379
LOG_LEVEL="debug"
ENABLE_SWAGGER=true

# Frontend (.env.local in frontend/ folder)
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-nextauth-secret-change-in-production"

# ===============================================
# QUICK START COMMANDS
# ===============================================
# 1. Copy this file:
#    cp .env.example .env
#    cp .env.example backend/.env
#    cp .env.example frontend/.env.local

# 2. Start Docker services:
#    docker-compose up -d

# 3. Run migrations:
#    cd backend && npx prisma migrate dev

# 4. Seed database:
#    cd backend && npm run prisma:seed

# 5. Start development:
#    npm run dev

