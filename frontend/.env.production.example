# Frontend Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===============================================
# API CONFIGURATION
# ===============================================
NEXT_PUBLIC_API_URL="https://api.yourdomain.com"
# Production API endpoint (must be HTTPS)

# ===============================================
# AUTHENTICATION
# ===============================================
NEXTAUTH_URL="https://yourdomain.com"
# Production frontend URL (must match domain)

NEXTAUTH_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS"
# Generate with: openssl rand -base64 32

# ===============================================
# FEATURE FLAGS
# ===============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
# Enable analytics in production

NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
# Enable Sentry error reporting

NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
# Enable performance monitoring

# ===============================================
# MONITORING & OBSERVABILITY
# ===============================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=""
# Example: https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

SENTRY_AUTH_TOKEN=""
# For source map uploads

SENTRY_ORG=""
SENTRY_PROJECT=""

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
# Example: G-XXXXXXXXXX

# ===============================================
# APPLICATION SETTINGS
# ===============================================
NEXT_PUBLIC_APP_NAME="EPC Project Control"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SUPPORT_EMAIL="support@yourdomain.com"

# ===============================================
# CDN CONFIGURATION (Optional)
# ===============================================
NEXT_PUBLIC_CDN_URL=""
# CloudFront or other CDN URL for static assets

# ===============================================
# MAP INTEGRATION (Future)
# ===============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""
# For project location mapping

# ===============================================
# FILE UPLOAD
# ===============================================
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
# 50MB in bytes

NEXT_PUBLIC_ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif"
# Comma-separated list

# ===============================================
# SESSION CONFIGURATION
# ===============================================
NEXT_PUBLIC_SESSION_TIMEOUT=3600
# Session timeout in seconds (1 hour)

# ===============================================
# PERFORMANCE
# ===============================================
NEXT_PUBLIC_API_TIMEOUT=30000
# API request timeout in milliseconds (30 seconds)

NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
# Enable PWA service worker

# ===============================================
# SECURITY
# ===============================================
NEXT_PUBLIC_ENABLE_CSP=true
# Content Security Policy

# ===============================================
# BUILD CONFIGURATION
# ===============================================
ANALYZE=false
# Set to true to analyze bundle size

# ===============================================
# EXTERNAL SERVICES (Future)
# ===============================================
# Email service (SendGrid, Mailgun, etc.)
SENDGRID_API_KEY=""

# SMS service (Twilio)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""

# ===============================================
# NOTES
# ===============================================
# - Never commit .env.production with real values
# - Use environment variables in CI/CD pipeline
# - NEXT_PUBLIC_ prefix exposes variables to browser
# - Keep sensitive keys without NEXT_PUBLIC_ prefix
# - Use HTTPS in production
# - Enable security headers
# - Test in staging environment first
